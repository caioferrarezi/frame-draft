{
  "compilerOptions": {
    "module": "ES2015",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "noEmitOnError": true,
    "declaration": true,
    "declarationDir": "./types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["dist"]
}
